<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/common_background"
    tools:context="iit.iitrc.rahil.cognizance_2016.Zones$PlaceholderFragment"
    android:weightSum="1">


<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bhopall"
    android:id="@+id/image"
    android:layout_weight="0.28" />
    <iit.iitrc.rahil.cognizance_2016.LatoHeading
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BHOPAL"
        android:textSize="20sp"
        android:textColor="#58595b"
        android:id="@+id/city"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        />
    <iit.iitrc.rahil.cognizance_2016.LatoHeading
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5th feb,2016"
        android:textSize="16sp"
        android:textColor="#58595b"
        android:id="@+id/date"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />
    <iit.iitrc.rahil.cognizance_2016.LatoHeading
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BHOPAL"
        android:textSize="16sp"
        android:textColor="#58595b"
        android:id="@+id/college"

        android:layout_gravity="center"
        />
</LinearLayout>
