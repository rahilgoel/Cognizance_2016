<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splashback"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".75"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/splashstable" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/spashrotate" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_weight=".25"
        android:gravity="center"
        android:orientation="vertical">

        <iit.iitrc.rahil.cognizance_2016.ChampageFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cognizance"
            android:textColor="#114456"
            android:textSize="24sp" />

        <iit.iitrc.rahil.cognizance_2016.ChampageFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="The Annual Technical Fest of IIT Roorkee"
            android:textColor="#000"
            android:textSize="14sp" />

        <iit.iitrc.rahil.cognizance_2016.ChampageFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18th-20th March 2016"
            android:textColor="#000"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
